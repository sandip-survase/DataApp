<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#fff"
                android:endColor="#fff"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/sky_blue_color"
                    android:endColor="@color/sky_blue_color"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/dark_color"
                    android:endColor="@color/dark_color"
                    android:angle="270" />
            </shape>
        </clip>
    </item>
    </layer-list>