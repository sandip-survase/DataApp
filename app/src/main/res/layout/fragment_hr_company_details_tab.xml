<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/while_color"

    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_my_profile_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:id="@+id/completepersonalrl"
            android:layout_marginTop="30dp"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instnameinput"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company Name*"
                    android:textSize="16dp"
                    android:textColor="@color/dark_color"
                    android:maxLength="100"
                    android:inputType="textCapWords"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:id="@+id/instname"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addressline1input"
                android:layout_below="@+id/instnameinput"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="House no/Flat no/Plot no, Name*"
                    android:textSize="16dp"
                    android:textColor="@color/dark_color"
                    android:maxLength="200"
                    android:inputType="textCapWords"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:id="@+id/compaddressline1"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addressline1input"
                android:id="@+id/addressline2input"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Street Name/Landmark*"
                    android:textSize="16dp"
                    android:textColor="@color/dark_color"
                    android:maxLength="200"
                    android:inputType="textCapWords"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:id="@+id/compaddressline2"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addressline2input"
                android:id="@+id/addressline3input"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City, Pincode*"
                    android:textSize="16dp"
                    android:textColor="@color/dark_color"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:maxLength="200"
                    android:id="@+id/compaddressline3"/>
            </android.support.design.widget.TextInputLayout>





            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addressline3input"
                android:id="@+id/instemailinput"
                android:layout_marginTop="10dp"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company's Email Address*"
                    android:singleLine="true"
                    android:maxLength="100"
                    android:imeOptions="actionNext"
                    android:textSize="16dp"
                    android:textColor="@color/dark_color"
                    android:inputType="textEmailAddress"
                    android:id="@+id/instemail"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/instemailinput"
                android:id="@+id/instwebinput"
                android:layout_marginTop="10dp"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company's Website*"
                    android:inputType="textUri"
                    android:singleLine="true"
                    android:maxLength="100"
                    android:imeOptions="actionNext"
                    android:textSize="16dp"
                    android:textColor="@color/dark_color"

                    android:id="@+id/instweb"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/instwebinput"
                android:layout_marginTop="10dp"
                android:id="@+id/instphoneinput"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company's Phone Number (with STD code)*"
                    android:inputType="number"
                    android:textSize="16dp"
                    android:textColor="@color/dark_color"
                    android:singleLine="true"
                    android:maxLength="11"
                    android:id="@+id/instphone"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/instphoneinput"
                android:layout_marginTop="10dp"
                android:id="@+id/instphoneainput"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alternate Phone Number (with STD code)*"
                    android:textSize="16dp"
                    android:textColor="@color/dark_color"
                    android:maxLength="11"
                    android:inputType="number"
                    android:singleLine="true"
                    android:id="@+id/instphonea"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instreginput"
                android:layout_below="@+id/instphoneainput"
                android:layout_marginTop="10dp"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company CIN (Company Identification Number)"
                    android:textSize="16dp"
                    android:textColor="@color/dark_color"
                    android:maxLength="20"
                    android:inputType="text"
                    android:singleLine="true"
                    android:id="@+id/instreg"/>

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nature of Company"
                android:layout_below="@+id/instreginput"
                android:textSize="20dp"
                android:textColor="@color/while_color"
                android:id="@+id/loctxt"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:elevation="6dp"

                android:background="@drawable/textviewborder"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loctxt"
                android:id="@+id/board10spinner"
                android:layout_marginTop="20dp"
                android:layout_marginRight="3dp"
                android:layout_weight=".28"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/board10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@color/while_color"
                    android:gravity="center"
                    android:popupBackground="@color/while_color"
                    android:layout_marginLeft="5dp"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:id="@+id/spinnerimg1"
                    android:tint="#eee"
                    android:src="@drawable/drop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/spinnerimg1"
                    android:background="@color/dark_color"
                    />

            </RelativeLayout>
        </RelativeLayout>>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
