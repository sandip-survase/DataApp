<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:id="@+id/section"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tableborder"
        >

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dark_color"
            android:layout_centerHorizontal="true"
            android:id="@+id/sectionhorizontal"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:id="@+id/sectionvertical"
            android:background="@color/dark_color"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/sectionhorizontal"
            android:layout_above="@id/sectionvertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10th"
                android:textColor="@color/dark_color"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:textSize="10dp"
                android:id="@+id/aptitxt"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                >

                <TextView
                    android:id="@+id/company10txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_color"
                    android:text="Company Criteria"
                    android:textSize="12dp"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_color"
                    android:id="@+id/companytenthmarksview"
                    android:layout_below="@+id/company10txt"
                    android:textSize="12dp"
                    android:text="85"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>



            </RelativeLayout>



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/sectionhorizontal"
            android:layout_below="@id/sectionvertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UG"
                android:textColor="@color/dark_color"
                android:paddingTop="2dp"
                android:paddingLeft="4dp"
                android:textSize="10dp"
                android:id="@+id/ugtxt"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                >

                <TextView
                    android:id="@+id/companyugtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_color"
                    android:text="Company Criteria"
                    android:textSize="12dp"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_color"
                    android:id="@+id/companyugmarksview"
                    android:layout_below="@+id/companyugtxt"
                    android:textSize="12dp"
                    android:text="85"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    />



            </RelativeLayout>



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/sectionhorizontal"
            android:layout_above="@id/sectionvertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12th / Diploma"
                android:textColor="@color/dark_color"
                android:paddingTop="2dp"
                android:paddingLeft="4dp"
                android:textSize="10dp"
                android:id="@+id/diplomatxt"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                >

                <TextView
                    android:id="@+id/company12txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_color"
                    android:text="Company Criteria"
                    android:textSize="12dp"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_color"
                    android:id="@+id/companytwelthordiplomamarksview"
                    android:layout_below="@+id/company12txt"
                    android:textSize="12dp"
                    android:text="85"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    />


            </RelativeLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/sectionhorizontal"
            android:layout_below="@id/sectionvertical"
            >


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>


