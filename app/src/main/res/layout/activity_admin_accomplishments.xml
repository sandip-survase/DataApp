<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myprofileaccomplishments"
    android:background="@color/while_color">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_my_profile_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:padding="16dp"
        tools:context="com.octopusites.placeme.AdminAccomplishments">

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/studentBlock"
            android:background="@drawable/textviewborder"
            android:elevation="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/knownlangtxt"
            android:text="Known Languages"
            android:textColor="@color/while_color"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:elevation="8dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/add_icon_white"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:elevation="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/studentBlock"
            android:id="@+id/alumniBlock"
            android:layout_marginTop="20dp"
            android:background="@drawable/textviewborder"
            android:elevation="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studentBlock"
            android:text="Expert Skills"
            android:textColor="@color/while_color"
            android:id="@+id/skillstxt"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:elevation="8dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/studentBlock"
            android:layout_alignParentRight="true"
            android:src="@drawable/add_icon_white"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:elevation="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/alumniBlock"
            android:id="@+id/adminBlock"
            android:layout_marginTop="20dp"
            android:background="@drawable/textviewborder"
            android:elevation="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alumniBlock"
            android:text="Honors and Awards"
            android:textColor="@color/while_color"
            android:elevation="8dp"
            android:id="@+id/honortxt"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/alumniBlock"
            android:layout_alignParentRight="true"
            android:src="@drawable/add_icon_white"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:elevation="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/adminBlock"
            android:id="@+id/patentbutton"
            android:layout_marginTop="20dp"
            android:background="@drawable/textviewborder"
            android:elevation="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adminBlock"
            android:text="Patents"
            android:textColor="@color/while_color"
            android:elevation="8dp"
            android:id="@+id/patenttxt"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/adminBlock"
            android:layout_alignParentRight="true"
            android:src="@drawable/add_icon_white"
            android:elevation="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/patentbutton"
            android:id="@+id/publicationbutton"
            android:layout_marginTop="20dp"
            android:background="@drawable/textviewborder"
            android:elevation="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/patentbutton"
            android:text="Publications"
            android:id="@+id/publicationtxt"
            android:textColor="@color/while_color"
            android:textSize="18dp"
            android:elevation="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/patentbutton"
            android:layout_alignParentRight="true"
            android:src="@drawable/add_icon_white"
            android:elevation="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp" />

    </RelativeLayout>
</ScrollView>