<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#282f35">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_edit_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:focusableInTouchMode="true"
        tools:context="placeme.octopusites.com.placeme.EditUserActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit user"
            android:textSize="18dp"
            android:textColor="#eee"
            android:id="@+id/createpasstxt"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createpasstxt"
            android:textColor="#bbb"
            android:text="You can search the user by entering his/her email to be edited."
            android:layout_marginTop="10dp"
            android:id="@+id/passsenstxt"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passsenstxt"
            android:id="@+id/userinput"
            android:layout_marginTop="20dp"
            android:layout_marginRight="3dp"
            android:layout_weight=".28"
            android:orientation="horizontal">



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:popupBackground="#001111"
                android:layout_marginLeft="5dp"
                android:id="@+id/usernameinput"
                android:theme="@style/TextLabel"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search Username"
                    android:singleLine="true"
                    android:textSize="15dp"
                    android:textColor="#eee"
                    android:imeOptions="actionSearch"
                    android:id="@+id/username"/>
            </android.support.design.widget.TextInputLayout>



            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:id="@+id/spinnerimg1"
                android:tint="#eee"
                android:src="@drawable/ic_search" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boxborderwhite"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:layout_below="@+id/userinput"
            android:id="@+id/editemailrl1"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email associated with account"
                android:textSize="12dp"
                android:textColor="#bbb"
                android:id="@+id/asstxt"
                android:layout_marginTop="16dp"
                android:layout_marginRight="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#eee"
                android:textStyle="bold"
                android:text="sharmaraju352@gmail.com"
                android:layout_marginLeft="10dp"
                android:id="@+id/primaryemail"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/asstxt"
                />
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:id="@+id/editselectionview"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                />
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/trashselectionview"
                android:layout_toLeftOf="@+id/editselectionview"
                android:layout_marginTop="5dp"
                android:layout_marginRight="1dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/trash"
                android:id="@+id/trash"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@+id/editemailicon"
                android:layout_marginRight="20dp"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/pencilwhite"
                android:id="@+id/editemailicon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c59a6d"
                android:layout_below="@+id/primaryemail"
                android:layout_marginTop="5dp"
                android:layout_marginRight="16dp"
                android:id="@+id/line1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placement Status"
                android:layout_below="@+id/line1"
                android:layout_marginTop="5dp"
                android:textColor="#bbb"
                android:textSize="12dp"
                android:id="@+id/placementstatustxt"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placed in Cognizant"
                android:layout_below="@+id/placementstatustxt"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="#eee"
                android:textStyle="bold"
                android:id="@+id/placementstatus"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c59a6d"
                android:layout_below="@+id/placementstatus"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:id="@+id/line2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debar Status"
                android:textSize="12dp"
                android:layout_below="@+id/line2"
                android:textColor="#bbb"
                android:layout_marginTop="5dp"
                android:id="@+id/debarstatustxt"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Debarred"
                android:layout_below="@+id/debarstatustxt"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="#eee"
                android:textStyle="bold"
                android:id="@+id/debarornot"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c59a6d"
                android:layout_below="@+id/debarornot"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:id="@+id/line3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Role"
                android:layout_below="@+id/line3"
                android:textSize="12dp"
                android:textColor="#bbb"
                android:layout_marginTop="5dp"
                android:id="@+id/rolestatustxt"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student"
                android:layout_below="@+id/rolestatustxt"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="#eee"
                android:id="@+id/role"
                android:textStyle="bold"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/edituserrl"
            android:layout_below="@+id/userinput"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:background="@drawable/boxborderwhite"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/trash"
                android:id="@+id/trash2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"

                />

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:id="@+id/trash2selectionview"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit email address"
                android:textSize="12dp"
                android:textColor="#bbb"
                android:id="@+id/ass2txt"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ass2txt"
                android:id="@+id/emailinput"
                android:layout_marginTop="10dp"
                android:theme="@style/TextLabel"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter email address"
                    android:textSize="15dp"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="#eee"
                    android:id="@+id/email"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="An email will be sent to this email address containing link to download the app, their edited username and dynamically generated password."
                android:layout_below="@+id/emailinput"
                android:id="@+id/passpasstxt"
                android:textColor="#bbb"
                android:textSize="12dp"
                android:paddingTop="5dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c59a6d"
                android:layout_below="@+id/passpasstxt"
                android:layout_marginTop="5dp"
                android:id="@+id/line11"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placement Status"
                android:layout_below="@+id/line11"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:textColor="#bbb"
                android:id="@+id/placementstatus2txt"
                />

            <CheckBox
                android:id="@+id/checkboxplaced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placementstatus2txt"
                android:text="Placed"
                android:layout_marginTop="10dp"
                android:theme="@style/MyCheckBox"
                android:textColor="#eee"
                android:layout_marginLeft="14dp"
                />
            <CheckBox
                android:id="@+id/checkboxnotplaced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placementstatus2txt"
                android:layout_toRightOf="@+id/checkboxplaced"
                android:text="Not Placed"
                android:layout_marginTop="10dp"
                android:theme="@style/MyCheckBox"
                android:textColor="#eee"
                android:layout_marginLeft="20dp"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkboxnotplaced"
                android:layout_marginTop="5dp"
                android:id="@+id/companynameinput"
                android:theme="@style/TextLabel"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company Name"
                    android:textSize="15dp"
                    android:singleLine="true"
                    android:textColor="#bbb"
                    android:id="@+id/fname"/>

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c59a6d"
                android:layout_below="@+id/companynameinput"
                android:layout_marginTop="5dp"
                android:id="@+id/line22"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debar Status"
                android:layout_below="@+id/line22"
                android:textSize="12dp"
                android:textColor="#bbb"
                android:layout_marginTop="5dp"
                android:id="@+id/debarstatus2txt"
                />

            <CheckBox
                android:id="@+id/CheckBoxdebar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/debarstatus2txt"
                android:text="Debarred"
                android:layout_marginTop="10dp"
                android:theme="@style/MyCheckBox"
                android:textColor="#eee"
                android:layout_marginLeft="14dp"
                />
            <CheckBox
                android:id="@+id/CheckBoxsnotdebar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/debarstatus2txt"
                android:layout_toRightOf="@+id/CheckBoxdebar"
                android:text="Not Debarred"
                android:layout_marginTop="10dp"
                android:theme="@style/MyCheckBox"
                android:textColor="#eee"
                android:layout_marginLeft="20dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c59a6d"
                android:layout_below="@+id/CheckBoxsnotdebar"
                android:layout_marginTop="5dp"
                android:id="@+id/line33"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Role"
                android:layout_below="@+id/line33"
                android:textColor="#bbb"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:id="@+id/rolestatus2txt"
                />

            <CheckBox
                android:id="@+id/checkboxstudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rolestatus2txt"
                android:text="Student"
                android:layout_marginTop="10dp"
                android:theme="@style/MyCheckBox"
                android:textColor="#eee"
                android:layout_marginLeft="14dp"
                />
            <CheckBox
                android:id="@+id/checkboxalumni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rolestatus2txt"
                android:layout_toRightOf="@+id/checkboxstudent"
                android:text="Alumni"
                android:layout_marginTop="10dp"
                android:theme="@style/MyCheckBox"
                android:textColor="#eee"
                android:layout_marginLeft="20dp"
                />


        </RelativeLayout>

    </RelativeLayout>
</ScrollView>