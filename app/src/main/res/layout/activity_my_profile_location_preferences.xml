            android:layout_marginTop="20dp"
            android:background="@color/sky_blue_color"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/trashlocation5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/locationline4"
            android:layout_marginTop="35dp"
            android:src="@drawable/delete_icon" />

        <View
            android:id="@+id/trash5selectionview"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:layout_below="@+id/locationline4"
            android:layout_marginTop="20dp" />

        <RelativeLayout
            android:id="@+id/locationrl5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locationline4"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/locationinput5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Location Preference"
                    android:textSize="15dp"
                    android:textColor="@color/dark_color"
                    android:maxLength="100"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:id="@+id/location5"
                    />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <View
            android:id="@+id/addmorelocation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/locationrl5"
            android:elevation="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/textviewborder" />

        <View
            android:id="@+id/addmorelocation1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/addmorelocation"/>

        <TextView
            android:id="@+id/addmorelocationtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locationrl5"
            android:layout_marginLeft="10dp"
            android:elevation="2dp"
            android:layout_marginTop="30dp"
            android:text="Add Another Location"
            android:textColor="@color/while_color"
            android:textSize="18dp" />

        <ImageView
            android:elevation="2dp"
            android:id="@+id/addmorelocationimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/locationrl5"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/add_icon_white" />

    </RelativeLayout>
</ScrollView>

