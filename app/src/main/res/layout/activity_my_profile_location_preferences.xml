            android:layout_below="@+id/locationline2"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/locationinput3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Location Preference"
                    android:textSize="15dp"
                    android:textColor="@color/dark_color"
                    android:maxLength="100"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:id="@+id/location3"
                    />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>


        <View
            android:id="@+id/locationline3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/locationrl3"
            android:layout_marginTop="20dp"
            android:background="@color/sky_blue_color"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/trashlocation4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/locationline3"
            android:layout_marginTop="35dp"
            android:src="@drawable/delete_icon" />

        <View
            android:id="@+id/trash4selectionview"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:layout_below="@+id/locationline3"
            android:layout_marginTop="20dp" />

        <RelativeLayout
            android:id="@+id/locationrl4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locationline3"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/locationinput4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Location Preference"
                    android:textSize="15dp"
                    android:textColor="@color/dark_color"
                    android:maxLength="100"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:id="@+id/location4"
