<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:padding="12dp"
    android:clickable="true"
    android:background="@drawable/boxborder"
    android:orientation="vertical">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="15dp"
       android:textColor="#252f35"
       android:id="@+id/companyname"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Last Updated"
        android:textColor="#666"
        android:layout_below="@+id/companyname"
        android:id="@+id/lastmodified"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#282f35"
        android:textSize="12dp"
        android:text="17-FEB-2017 12:00 PM"
        android:id="@+id/lastmodifiedtime"
        android:layout_below="@+id/lastmodified"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#282f35"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:id="@+id/registerednumber"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#282f35"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:id="@+id/placednumber"
        android:layout_below="@+id/registerednumber"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Last Date of Registration"
        android:textColor="#666"
        android:layout_below="@+id/companyname"
        android:layout_alignParentRight="true"
        android:id="@+id/lastdateofregistrationtxt"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#282f35"
        android:textSize="12dp"
        android:text="27-FEB-2017"
        android:layout_alignParentRight="true"
        android:id="@+id/lastdateofreg"
        android:layout_below="@+id/lastdateofregistrationtxt"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>