<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:padding="12dp"
    android:clickable="true"
    android:background="@drawable/boxborder"
    android:elevation="2dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="company name"
        android:textColor="@color/dark_color"
        android:id="@+id/companyname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Last Updated"
        android:textColor="@color/dark_color"
        android:layout_below="@+id/companyname"
        android:id="@+id/lastmodified"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_color"
        android:textSize="12dp"
        android:text="17-FEB-2017 12:00 PM"
        android:id="@+id/lastmodifiedtime"
        android:layout_below="@+id/lastmodified"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_color"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:id="@+id/registerednumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_color"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:id="@+id/placednumber"
        android:layout_below="@+id/registerednumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Last Date of Registration"
        android:textColor="@color/dark_color"
        android:layout_below="@+id/companyname"
        android:layout_alignParentRight="true"
        android:id="@+id/lastdateofregistrationtxt"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_color"
        android:textSize="12dp"
        android:text="27-FEB-2017"
        android:layout_alignParentRight="true"
        android:id="@+id/lastdateofreg"
        android:layout_below="@+id/lastdateofregistrationtxt"
        android:layout_marginTop="5dp" />

</RelativeLayout>