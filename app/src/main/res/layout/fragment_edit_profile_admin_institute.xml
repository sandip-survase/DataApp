<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/while_color"

    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_my_profile_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:id="@+id/completepersonalrl"
            android:layout_marginTop="30dp"
            >
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instnameinput"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Institute Name*"
                    android:textSize="16dp"
                    android:maxLength="200"
                    android:singleLine="true"
                    android:textColor="@color/dark_color"
                    android:id="@+id/instname"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/instnameinput"
                android:id="@+id/instemailinput"
                android:layout_marginTop="10dp"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Institute Email Address*"
                    android:textSize="16dp"
                    android:maxLength="100"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/dark_color"
                    android:id="@+id/instemail"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/instemailinput"
                android:id="@+id/instwebinput"
                android:layout_marginTop="10dp"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Institute Website*"
                    android:textSize="16dp"
                    android:inputType="textUri"
                    android:singleLine="true"
                    android:textColor="@color/dark_color"
                    android:maxLength="100"
                    android:id="@+id/instweb"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/instwebinput"
                android:layout_marginTop="10dp"
                android:id="@+id/instphoneinput"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Institute Phone Number (with STD code)*"
                    android:textSize="16dp"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="@color/dark_color"
                    android:maxLength="11"
                    android:id="@+id/instphone"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/instphoneinput"
                android:layout_marginTop="10dp"
                android:id="@+id/instphoneainput"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alternate Phone Number (with STD code)"
                    android:textSize="16dp"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="@color/dark_color"
                    android:maxLength="11"
                    android:id="@+id/instphonea"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instuniversityinput"
                android:layout_below="@+id/instphoneainput"
                android:layout_marginTop="10dp"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="University Name*"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_color"
                    android:maxLength="100"
                    android:id="@+id/instuniversity"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instreginput"
                android:layout_below="@+id/instuniversityinput"
                android:layout_marginTop="10dp"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Institute Registration Number*"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_color"
                    android:maxLength="20"
                    android:id="@+id/instreg"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location Details"
                android:layout_below="@+id/instreginput"
                android:textSize="18dp"
                android:textColor="@color/while_color"
                android:id="@+id/loctxt"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@drawable/textviewborder"
                android:elevation="6dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Address"
                android:layout_below="@+id/loctxt"
                android:id="@+id/caddrtxt"
                android:textColor="@color/dark_color"
                android:textSize="14dp"
                android:layout_marginTop="12dp"
                />


            <android.support.design.widget.TextInputLayout
                android:theme="@style/TextLabel"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/caddrline1input"
                android:layout_below="@+id/caddrtxt"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/caddrline1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/dark_color"
                    android:maxLength="200"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:hint="House no/Flat no/Plot no, Name*"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:theme="@style/TextLabel"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/caddrline2input"
                android:layout_below="@+id/caddrline1input"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/caddrline2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/dark_color"
                    android:maxLength="200"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:hint="Street Name/Landmark*"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:theme="@style/TextLabel"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/caddrline3input"
                android:layout_below="@+id/caddrline2input"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/caddrline3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/dark_color"
                    android:maxLength="200"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:hint="City, Pincode*"
                    />
            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
