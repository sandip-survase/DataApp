<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="placeme.octopusites.com.placeme.WelcomePasswordFragment"
    android:background="#fcfdfd">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/welcometextviewcontext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:text="Welcome Back User!"
                android:textColor="#03353e"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/welcometextviewcontext1"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:id="@+id/logo"
                />

            <TextView
                android:id="@+id/welcometextviewcontext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="You are already registered with Place Me. Enter your password to continue."
                android:textColor="#03353e"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/enterpasswordimage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_below="@+id/welcometextviewcontext2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/passwordscreen"
                android:layout_marginBottom="20dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/passwordTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enterpasswordimage"
                android:layout_toLeftOf="@+id/section"
                android:theme="@style/TextLabelNew"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter password"
                    android:textSize="15dp"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:id="@+id/welcomepassword"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
