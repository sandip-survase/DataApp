<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/while_color">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_my_profile_tenth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.octopusites.placeme.MyProfileTenth">

        <TextView
            android:id="@+id/tenthtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/textviewborder"
            android:elevation="2dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:text="Std. X Details"
            android:textColor="@color/while_color"
            android:textSize="20dp" />

        <View
            android:id="@+id/section"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/edurl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tenthtxt"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/section">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/marks10input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/marks10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Marks Obtained"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/dark_color"
                    android:textSize="15dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/marks10_outOf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/marks10input"
                android:theme="@style/TextLabel">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/outof10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Out Of Marks"
                    android:maxLength="5"
                    android:inputType="number"
                    android:textColor="@color/dark_color"
                    android:textSize="15dp" />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tenthtxt"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/section">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/marks10_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:theme="@style/TextLabel">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/percent10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="Percentage"
                    android:textColor="@color/dark_color"
                    android:textSize="15dp" />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/schoolname10input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edurl1"
            android:layout_marginTop="10dp"
            android:theme="@style/TextLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/schoolname10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="School Name"
                android:inputType="textCapWords"
                android:maxLength="100"
                android:singleLine="true"
                android:textColor="@color/dark_color"
                android:textSize="15dp" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:id="@+id/board10spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/schoolname10input"
            android:layout_marginRight="3dp"
            android:layout_marginTop="20dp"
            android:layout_weight=".28"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/board10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@color/while_color"
                android:gravity="center"
                android:popupBackground="@color/while_color"
                android:spinnerMode="dropdown" />

            <ImageView
                android:id="@+id/spinnerimg1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/drop"
                android:tint="@color/dark_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/spinnerimg1"
                android:background="@color/dark_color" />

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/otherboardinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/board10spinner"
            android:layout_marginTop="15dp"
            android:theme="@style/TextLabel"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/otherboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Please Specify"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textColor="@color/dark_color"
                android:textSize="15dp" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:id="@+id/yearofpassing10spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/otherboardinput"
            android:layout_toLeftOf="@+id/section">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/yearofpassing10inpute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:theme="@style/TextLabel">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/yearofpassing10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="Month, Year of Passing"
                    android:textColor="@color/dark_color"
                    android:textSize="15dp" />

            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>