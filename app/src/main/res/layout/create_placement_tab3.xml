<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/while_color">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="16dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/xinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:theme="@style/TextLabel"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/xcriteria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Std X criteria (%)"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="@color/dark_color"
                android:textSize="16dp"
                android:maxLength="5"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/xiiinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xinput"
            android:layout_marginTop="10dp"
            android:theme="@style/TextLabel"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/xiicriteria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Std XII/Diploma criteria (%)"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="@color/dark_color"
                android:textSize="16dp"
                android:maxLength="5"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/uginput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xiiinput"
            android:layout_marginTop="10dp"
            android:theme="@style/TextLabel"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ugcriteria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UG criteria (%)"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="@color/dark_color"
                android:textSize="16dp"
                android:maxLength="5"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/pginput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uginput"
            android:layout_marginTop="10dp"
            android:theme="@style/TextLabel"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/pgcriteria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PG criteria (%)"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="@color/dark_color"
                android:textSize="16dp" />

        </android.support.design.widget.TextInputLayout>


    </RelativeLayout>
</ScrollView>