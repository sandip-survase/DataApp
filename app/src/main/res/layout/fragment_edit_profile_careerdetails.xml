<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/while_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_my_profile_career_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:padding="16dp">

        <View
            android:id="@+id/careerobjbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/textviewborder"
            android:elevation="6dp" />

        <TextView
            android:id="@+id/careerobjtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:elevation="8dp"
            android:text="Career Objective"
            android:textColor="@color/while_color"
            android:textSize="18dp"

            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:elevation="8dp"
            android:src="@drawable/add_icon_white" />

        <View
            android:id="@+id/strengthbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/careerobjbutton"
            android:layout_marginTop="20dp"
            android:background="@drawable/textviewborder"
            android:elevation="6dp" />

        <TextView
            android:id="@+id/strengthtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/careerobjbutton"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:elevation="8dp"
            android:text="Strengths"
            android:textColor="@color/while_color"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/careerobjbutton"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:elevation="8dp"
            android:src="@drawable/add_icon_white" />

        <View
            android:id="@+id/weakbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/strengthbutton"
            android:layout_marginTop="20dp"
            android:background="@drawable/textviewborder"
            android:elevation="6dp" />

        <TextView
            android:id="@+id/weaktxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/strengthbutton"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:elevation="8dp"
            android:text="Weaknesses"
            android:textColor="@color/while_color"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/strengthbutton"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:elevation="8dp"
            android:src="@drawable/add_icon_white" />

        <View
            android:id="@+id/locbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/weakbutton"
            android:layout_marginTop="20dp"
            android:background="@drawable/textviewborder"
            android:elevation="6dp" />

        <TextView
            android:id="@+id/locationtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weakbutton"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:elevation="8dp"
            android:text="Location Preferences"
            android:textColor="@color/while_color"
            android:textSize="18dp" />

        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/weakbutton"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:elevation="8dp"
            android:src="@drawable/add_icon_white" />

        <!--<com.google.android.gms.ads.AdView-->
        <!--android:id="@+id/ad_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/locbutton"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="20dp"-->
        <!--ads:adSize="BANNER"-->
        <!--ads:adUnitId="@string/banner_ad_unit_id" />-->

        <com.appnext.banners.BannerView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/locbutton"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:bannerSize="BANNER"
            ads:placementId="2d14aba2-5254-4a93-98f7-20689782f3e8" />

        <com.appnext.banners.BannerView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/banner"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:bannerSize="BANNER"
            ads:placementId="ec30cae5-3357-48a5-bb6c-32d76b804c4a" />

        <View
            android:id="@+id/dummy_view_for_shadow"
            android:layout_width="match_parent"
            android:layout_below="@+id/locbutton"
            android:layout_height="0dp"
            android:layout_marginTop="50dp" />


    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
