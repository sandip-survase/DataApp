<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:padding="7dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/uploadedbyprofile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_image_icon"
        android:layout_centerVertical="true"
        app:border_color="#FF000000"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/logo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/logo"
        app:border_color="#FF000000"
        android:layout_marginLeft="50dp"
        android:layout_alignBottom="@+id/uploadedbyprofile"




        />



    <TextView
        android:id="@+id/companyname"
        android:textColor="@color/heading"
        android:textSize="16dp"
        android:text="companyname"
        android:singleLine="true"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/logo"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/cpackage"/>


    <TextView
        android:id="@+id/lastdateofreg"
        android:layout_below="@id/companyname"
        android:layout_width="match_parent"
        android:text="LDR 30-Apr-2017"
        android:textColor="@color/notification"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/logo"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/cpackage"
        android:textColor="@color/attachment"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="12dp"
        android:text="3.4 LPA"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/post"
        android:textColor="@color/attachment"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="12dp"
        android:text="Trainee"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />



</RelativeLayout>