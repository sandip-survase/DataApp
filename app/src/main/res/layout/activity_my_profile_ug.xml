            android:id="@+id/uuniversityspinner"
            android:layout_marginTop="20dp"
            android:layout_marginRight="3dp"
            android:layout_weight=".28"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/uuniversity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:popupBackground="#001111"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/spinnerimg3"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:tint="#eee"
                android:src="@drawable/drop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/spinnerimg3"
                android:background="#eee"
                />

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uuniversityspinner"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:id="@+id/otheruniversityinput"
            android:layout_marginLeft="5dp"
            android:theme="@style/TextLabel">

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Please Specify"
                android:singleLine="true"
                android:inputType="textCapWords"
                android:textSize="15dp"
                android:textColor="#eee"
                android:id="@+id/otheruniversity"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/otheruniversityinput"
            android:layout_marginTop="10dp"
            android:id="@+id/schoolnameuinput"
            android:layout_marginLeft="5dp"
            android:theme="@style/TextLabel">

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="College Name"
                android:singleLine="true"
                android:textSize="15dp"
                android:textColor="#eee"
                android:inputType="textCapWords"
                android:id="@+id/schoolnameu"/>
        </android.support.design.widget.TextInputLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/section"
            android:id="@+id/yearofpassinguspinner"
            android:layout_below="@+id/schoolnameuinput"
            >
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="5dp"
                android:theme="@style/TextLabel">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Month, Year of Passing"
                    android:textSize="15dp"
                    android:textColor="#eee"
                    android:focusable="false"
                    android:id="@+id/yearofpassingu"/>

            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>



    </RelativeLayout>
</ScrollView>